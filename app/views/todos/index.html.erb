<div class="container">
 <div class="row">
   <% @todos.each do |todo| %>
     <div class="col">
       <div class="card" style="width: 18rem;">
         <%= image_tag todo.photo, class: "card-img-top" %>
         <div class="card-body">
           <h5 class="card-title"> <%= link_to todo.title, todo_path(todo.id) %> </h5>
           <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

           <% if user_signed_in? %>
             <% if  current_user.todousers.find_by(todo_id: todo.id) %>
               <%= link_to "NO Listo",
                   todo_todouser_path(todo, current_user),
                   method: :delete , class: 'btn btn-danger'
               %>
             <% else %>
               <%= link_to "Listo", todo_todousers_path(todo),
                   method: :post,
                   class: 'btn btn-primary'
               %>
             <% end %>
           <% end %>




         </div>
       </div>
     </div>


   <% end %>
 </div>
</div>
